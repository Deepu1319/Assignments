public class CharOccurence {

   public static void main(String[] args) {
       String str = "Hello world. my name is divya. yy aa g y drf";
       System.out.println("Length Of String:" + str.length());
       int charcount = str.length() - str.replaceAll("y", "").length();
       System.out.println("Occurrence Of y Char In String: " + charcount);
   }
}

